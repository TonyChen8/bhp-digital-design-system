{
	"name": "bhp-digital-design-system",
	"version": "0.1.0",
	"private": true,
	"homepage": "/bhp-digital-design-system",
	"dependencies": {
		"bhp-ui": "^0.0.1",
		"bhp-ui-react": "^0.0.2",
		"bootstrap": "^4.0.0",
		"camelcase": "^5.0.0",
		"classnames": "^2.2.5",
		"hoist-non-react-statics": "^2.5.0",
		"js-yaml": "^3.11.0",
		"material-design-icons": "^3.0.1",
		"node-sass-chokidar": "^1.2.2",
		"npm-run-all": "^4.1.2",
		"rc-time-picker": "^3.3.1",
		"react": "^16.3.1",
		"react-autosuggest": "^9.3.4",
		"react-collapse": "^4.0.3",
		"react-copy-to-clipboard": "^5.0.1",
		"react-dates": "^16.5.0",
		"react-dom": "^16.3.1",
		"react-helmet": "^5.2.0",
		"react-motion": "^0.5.2",
		"react-router-dom": "^4.2.2",
		"react-scripts": "1.1.4",
		"reactstrap": "^5.0.0",
		"remarkable": "^1.7.1"
	},
	"scripts": {
		"test": "react-scripts test --env=jsdom",
		"eject": "react-scripts eject",
		"build-css": "node-sass-chokidar --include-path ./node_modules src/ -o src/",
		"watch-css": "npm run build-css && node-sass-chokidar --include-path ./node_modules src/ -o src/ --watch --recursive",
		"start-js": "npm run prebuild && react-scripts start",
		"start": "npm-run-all -p watch-css start-js",
		"build-js": "react-scripts build",
		"build": "npm-run-all build-css build-js",
		"prebuild": "node pre-build.js"
	}
}
